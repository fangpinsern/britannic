{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": "warn",
    "object-shorthand": "off",
    "no-underscore-dangle": "off",
    "no-await-in-loop": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.jsx"],
      "env": {
        "jest": true
      }
    }
  ]
}
